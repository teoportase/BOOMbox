@using Utils;
@using Microsoft.AspNetCore.Components.Web;

@code {
    public Album Album1 { get; set; }
    public Song Song1 { get; set; }
    public Song Song2 { get; set; }
    public Song Song3 { get; set; }

    protected override void OnInitialized()
    {
        Album1 = new Album("Test album");
        Song1 = new Song("Rain On Me", "Lady Gaga", "gaga.png");
        Album1.addSong(Song1);
        Song2 = new Song("Hyperballad", "Bjork", "riddle.png");
        Album1.addSong(Song2);
        Song3 = new Song("Firework", "Katy Perry", "katy.png");
        Album1.addSong(Song3);
        Console.WriteLine("test");
    }

    protected void PublishMqtt(string message)
    {
        _ = MqttConnection.Publish_Message(message);
    }
}
